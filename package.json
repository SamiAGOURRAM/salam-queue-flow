{
  "name": "queuemed",
  "private": true,
  "version": "0.1.0",
  "description": "QueueMed - AI-Powered Healthcare Queue Management for Morocco",
  "scripts": {
    "dev": "turbo run dev",
    "dev:web": "turbo run dev --filter=@queuemed/web",
    "dev:mcp": "turbo run dev --filter=@queuemed/mcp-server",
    "build": "turbo run build",
    "build:web": "turbo run build --filter=@queuemed/web",
    "build:core": "turbo run build --filter=@queuemed/core",
    "build:mcp": "turbo run build --filter=@queuemed/mcp-server",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "typecheck": "turbo run typecheck",
    "clean": "turbo run clean && rimraf node_modules"
  },
  "devDependencies": {
    "turbo": "^2.3.3",
    "rimraf": "^5.0.5"
  },
  "packageManager": "pnpm@9.15.0",
  "engines": {
    "node": ">=18.0.0"
  }
}
